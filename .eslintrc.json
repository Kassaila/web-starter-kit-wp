{
  "root": true,
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "jQuery": true,
    "$": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "plugins": ["import", "@babel", "prettier"],
  "extends": ["airbnb-base", "prettier", "prettier/babel"],
  "rules": {
    "no-param-reassign": ["error", { "props": false }],
    "no-underscore-dangle": "off",
    "func-names": ["warn", "as-needed"],
    "quote-props": [
      "warn",
      "as-needed",
      {
        "keywords": true,
        "unnecessary": false
      }
    ]
  }
}
